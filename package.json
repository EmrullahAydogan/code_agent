{
  "name": "local-code-agent-platform",
  "version": "1.0.0",
  "description": "A local web-based code agent platform with multi-agent support and multiple AI provider integrations",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "setup": "node setup.js",
    "postinstall": "npm run build --workspace=shared --if-present",
    "dev": "node start.js",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "start": "node start.js",
    "start:backend": "npm run start --workspace=backend",
    "start:frontend": "npm run preview --workspace=frontend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:shared": "npm run build --workspace=shared",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "node -e \"require('fs').rmSync('node_modules', {recursive:true, force:true}); require('child_process').execSync('npm run clean --workspaces --if-present')\"",
    "reset": "npm run clean && npm install && npm run setup"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "code-agent",
    "ai",
    "multi-agent",
    "local",
    "web-based"
  ],
  "author": "",
  "license": "MIT"
}
